<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScoreButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PlusButton" parent="ScoreButton">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">@string/plus</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PlusButtonTeam1" parent="PlusButton">
        <item name="android:layout_toEndOf">@id/t1_score</item>
    </style>

    <style name="PlusButtonTeam2" parent="PlusButton">
        <item name="android:layout_toEndOf">@id/t2_score</item>
    </style>

    <style name="MinusButton" parent="ScoreButton">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="android:contentDescription">@string/minus</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MinusButtonTeam1" parent="MinusButton">
        <item name="android:layout_toStartOf">@id/t1_score</item>
    </style>

    <style name="MinusButtonTeam2" parent="MinusButton">
        <item name="android:layout_toStartOf">@id/t2_score</item>
    </style>

    <style name="ScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
    </style>

    <style name="TeamText" parent="ScoreText">
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="Team1Text" parent="TeamText">
        <item name="android:layout_above">@id/t1_score</item>
    </style>

    <style name="Team2Text" parent="TeamText">
        <item name="android:layout_above">@id/t2_score</item>
    </style>
</resources>